{
    "name": "Chrome Password manager",
    "description": "Manages passwords.",
    "version": "1.0",
    "manifest_version": 3,
    "default_locale": "en",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "webNavigation",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "icons": {
        "16": "./access/icon.png",
        "48": "./access/icon.png",
        "128": "./access/icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./access/icon.png",
            "48": "./access/icon.png",
            "128": "./access/icon.png"
        }
    }
    
}